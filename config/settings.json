{
  "app": {
    "name": "MyApp",
    "version": "1.0.0",
    "debug": false,
    "environment": "production"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000
  },
  "database": {
    "engine": "postgresql",
    "host": "localhost",
    "port": 5432,
    "username": "db_user",
    "password": "securepassword",
    "name": "my_database",
    "pool_size": 10,
    "timeout": 30
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/app.log"
  },
  "security": {
    "secret_key": "CHANGE_ME_SECRET_KEY",
    "allow_cors": false
  },
  "api": {
    "key": "CHANGE_ME_API_KEY",
    "timeout": 5,
    "retries": 3
  },
  "features": {
    "enable_feature_x": true,
    "enable_feature_y": false,
    "maintenance_mode": false
  },
  "users": [
    {
      "username": "admin",
      "role": "superuser"
    },
    {
      "username": "user1",
      "role": "editor"
    },
    {
      "username": "user2",
      "role": "viewer"
    }
  ]
}